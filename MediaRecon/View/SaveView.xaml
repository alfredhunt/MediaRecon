<UserControl x:Class="ApexBytez.MediaRecon.View.SaveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ApexBytez.MediaRecon.View" xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" xmlns:converters="clr-namespace:ApexBytez.MediaRecon.Converters" xmlns:viewmodel="clr-namespace:ApexBytez.MediaRecon.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:Analysis}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel DataContext="{Binding Analysis}">
        <GroupBox Header="Save Results"  
                  DockPanel.Dock="Top" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource AnalysisLabel}" Content="Files Processed"/>
                <Label Grid.Row="1" Grid.Column="1" Style="{StaticResource AnalysisLabel}" Content="{Binding FilesProcessed}"/>
                <Label Grid.Row="2" Grid.Column="0" Style="{StaticResource AnalysisLabel}" Content="Data Processed"/>
                <Label Grid.Row="2" Grid.Column="1" Style="{StaticResource AnalysisLabel}" Content="{Binding TotalSize, Converter={converters:FileSizeFormatConverter}}" />

                <Label Grid.Row="1" Grid.Column="2" Style="{StaticResource AnalysisLabel}" Content="Duplicates Deleted"/>
                <Label Grid.Row="1" Grid.Column="3" Style="{StaticResource AnalysisLabel}" Content="{Binding DuplicateCount}"/>
                <Label Grid.Row="2" Grid.Column="2" Style="{StaticResource AnalysisLabel}" Content="Space Freed"/>
                <Label Grid.Row="2" Grid.Column="3" Style="{StaticResource AnalysisLabel}" Content="{Binding DuplicateSize, Converter={converters:FileSizeFormatConverter}}"/>

                <Label Grid.Row="1" Grid.Column="4" Style="{StaticResource AnalysisLabel}" Content="Distinct Saved"/>
                <Label Grid.Row="1" Grid.Column="5" Style="{StaticResource AnalysisLabel}" Content="{Binding DistinctCount}"/>
                <Label Grid.Row="2" Grid.Column="4" Style="{StaticResource AnalysisLabel}" Content="Size on Disk"/>
                <Label Grid.Row="2" Grid.Column="5" Style="{StaticResource AnalysisLabel}" Content="{Binding DistinctSize, Converter={converters:FileSizeFormatConverter}}"/>

                <Label Grid.Row="3" Grid.Column="0" Style="{StaticResource AnalysisLabel}" Content="Progress"/>
                <mah:MetroProgressBar Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" Margin="5"
                             Value="{Binding ProgressBarValue}"
                             Maximum="{Binding ProgressBarMaximum}"/>
                <Button Grid.Row="3" Grid.Column="7" Content="Cancel"
                        Command="{Binding CancelCommand}"/>
            </Grid>


        </GroupBox>
        <GroupBox Header="Log" Margin="5">
            <ListView ItemsSource="{Binding SaveResultsLog}"/>
        </GroupBox>
    </DockPanel>
</UserControl>
