<UserControl x:Class="ApexBytez.MediaRecon.View.AnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ApexBytez.MediaRecon.View" 
             xmlns:converters="clr-namespace:ApexBytez.MediaRecon.Converters" 
             xmlns:viewmodel="clr-namespace:ApexBytez.MediaRecon.ViewModel" xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             d:DataContext="{d:DesignInstance Type=viewmodel:AnalysisViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    
    <DockPanel DataContext="{Binding Analysis}">
        <GroupBox Header="Analysis" DockPanel.Dock="Top">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <Label Grid.Row="1" Grid.Column="0" Content="Files"/>
                <Label Grid.Row="1" Grid.Column="1" Content="{Binding FileCount}"/>
                <Label Grid.Row="2" Grid.Column="0" Content="Size on Disk"/>
                <Label Grid.Row="2" Grid.Column="1" Content="{Binding SourceFoldersSize, Converter={converters:FileSizeFormatConverter}}" />


                <Label Grid.Row="1" Grid.Column="2" Content="Files Analyzed"/>
                <Label Grid.Row="1" Grid.Column="3" Content="{Binding NumberOfFiles}"/>
                <Label Grid.Row="2" Grid.Column="2" Content="Data Analyzed"/>
                <Label Grid.Row="2" Grid.Column="3" Content="{Binding TotalSize, Converter={converters:FileSizeFormatConverter}}" />

                <Label Grid.Row="3" Grid.Column="0" Content="Analysis Time"/>
                <Label Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Content="{Binding AnalysisTime}"/>

                <Label Grid.Row="1" Grid.Column="4" Content="Duplicates"/>
                <Label Grid.Row="1" Grid.Column="5" Content="{Binding DuplicateCount}"/>
                <Label Grid.Row="2" Grid.Column="4" Content="Size on Disk"/>
                <Label Grid.Row="2" Grid.Column="5" Content="{Binding DuplicateSize, Converter={converters:FileSizeFormatConverter}}"/>

                <Label Grid.Row="1" Grid.Column="6" Content="Distinct"/>
                <Label Grid.Row="1" Grid.Column="7" Content="{Binding DistinctCount}"/>
                <Label Grid.Row="2" Grid.Column="6" Content="Size on Disk"/>
                <Label Grid.Row="2" Grid.Column="7" Content="{Binding DistinctSize, Converter={converters:FileSizeFormatConverter}}"/>

                <mah:MetroProgressBar Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="4" 
                                      Margin="5"
                                      Value="{Binding ProgressBarValue}"
                                      Maximum="{Binding ProgressBarMaximum}"/>

                <Button Grid.Row="3" Grid.Column="7" Content="Cancel" 
                        Visibility="{Binding CanCancel, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Command="{Binding CancelCommand}" />
                <Label Grid.Row="3" Grid.Column="7" Content="{Binding ResultsLabel}" 
                       Visibility="{Binding ShowResultsLabel, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="Reconciled Data" >
            <local:FolderView ItemsSource="{Binding ReconciledDirectories}" ViewStyle="List"/>
        </GroupBox>

        <!--<local:Section Header="Content"/>-->

    </DockPanel>
</UserControl>
