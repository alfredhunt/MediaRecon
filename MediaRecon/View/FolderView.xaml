<UserControl x:Class="ApexBytez.MediaRecon.View.FolderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ApexBytez.MediaRecon.View" xmlns:converters="clr-namespace:ApexBytez.MediaRecon.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <DataGrid x:Name="DataGrid" AutoGenerateColumns="False" SelectionMode="Single"
              MouseDown="DataGrid_MouseDown">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="True"
                                Width="200"/>
            <DataGridTextColumn Header="Date Modified" Binding="{Binding LastWriteTime}" IsReadOnly="True"
                                Width="200"/>
            <DataGridTextColumn Header="Type" Binding="{Binding Type}" IsReadOnly="True"
                                Width="75"/>
            <DataGridTextColumn Header="Size" Binding="{Binding Size, Converter={converters:FileSizeFormatConverter}}" 
                                IsReadOnly="True"
                                Width="125"/>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
